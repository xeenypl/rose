# the t key isn't used and it's easier to press than /, so lets use it
def_key "t"
    find
def_key "t"
    find_item_forward

def_key "+"
    show_clock
def_key "="
    volume_up

def_key "e"
    scroll_down
def_key "o"
    scroll_up

def_key "ctrl-u"
    page_up

def_key "ctrl-d"
    page_down

def_key "n"
    previous_column
def_key "i"
    next_column

def_key "."
    show_lyrics

def_key "k"
    next_found_item
def_key "K"
    previous_found_item

def_key "E"
    move_sort_order_down
def_key "O"
    move_sort_order_up

def_key "g"
  move_home

def_key "G"
  move_end

def_key "0"
  replay_song
def_key "ctrl-f"
  page_down
def_key "ctrl-b"
  page_up
